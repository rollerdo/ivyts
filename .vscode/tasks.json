    "version": "2.0.0",
    "tasks": [
        {
            "label": "Typescript compiler",
            "type": "shell",
            "command": "tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Typescript compiler (watch)",
            "type": "shell",
            "command": "tsc -w",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Start Server",
            "type": "shell",
            "command": "node dist/server.js",
            "problemMatcher": []
        },
        {
            "label": "Typescript Compiler (Watch)",
            "type": "shell",
            "command": "tsc --watch"
        },
        {
            "label": "Webpack",
            "type": "shell",
            "command": "webpack"
        },
        {
            "label": "Webpack (Watch)",
            "type": "shell",
            "command": "webpack --watch"
        }
    ]
}