{
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Typescript Nodejs Test",
                "program": "${workspaceRoot}/dist/test.js"
            },
            {
                "type": "chrome",
                "request": "launch",
                "name": "eSSETS Client",
                "sourceMaps": true,
                "url": "http://localhost:8080",
                "webRoot": "${workspaceRoot}"
            },
            {
                "type": "node",
                "request": "launch",
                "name": "eSSETS Server",
                "sourceMaps": true,
                "program": "${workspaceRoot}/dist/server.js",
                "outFiles": [
                    "${workspaceRoot}/out/**/*.js"
                ]
            }
        ]
    }